*
	margin 0
	padding 0
	outline none
body
	font-size: 18px
	font-family: G
	color #000
	background-color #F7F7F3
	line-height: 1.4
.container
	width 1230px
	margin: 0 auto;
	position relative
	@media screen and (min-width 2295px)
		max-width 1400px
	@media screen and (max-width 1230px)
		width: 1170px
	@media screen and (max-width 1199px)
		width: 970px;
	@media screen and (max-width 991px)
		width: 750px;
	@media screen and (max-width 767px)
		width auto
.wrapper
	overflow hidden
.content
	position relative
	z-index 40
a
	color: #000
	&:focus
		outline: 0
		text-decoration none
	&:hover
		text-decoration none
h1,h2,h3,h4,h5,h6
	font-weight normal
	margin 0
button
	border none
section
header
footer
	width 100%
	display block
.video-wrapper
	margin 0 auto
	position relative
	width 100%
	top 0
	&:before
		content ''
		height 0
		padding-top 56.25%
		display block
	&:after
		content: ''
		display block
		position: absolute
		top: 0
		left 0
		right 0
		width: 100%
		height 70px
	img,
	iframe
		position absolute
		width 100%
		height 100%
		display block
		border-radius 0
		border: 0
		top 0
		left 0
		right 0
		bottom 0
		cursor pointer
		margin 0 auto
.button
	font-size: 20px
	display block
	text-align center
	margin 0 auto
	text-decoration none
	color: #fff
	width: 100%
	max-width: 328px;
	border-radius: 7px;
	background-color: #543f2a
	margin 0 auto
	padding 27px 20px
	transition: all .3s ease
	&:focus
		text-decoration none
		color #fff
	&:hover
		text-decoration none
		color #fff
		box-shadow: 0 0 0 50px #543f2a - 60px inset
	@media screen and (max-width 386px)
		padding 20px 15px
.general-title
	text-align center
	font-size: 40px
	font-weight: bold
	margin-bottom: 50px
	@media screen and (max-width 560px)
		font-size: 28px
		margin-bottom: 30px
.general-list
	li
		list-style none
		padding-left: 20px
		position relative
		margin-bottom: 10px
		&:last-child
			margin-bottom: 0
		&:before
			content ''
			display block
			position absolute
			width 14px
			height: 14px
			border-radius: 50px
			background-color: #543f2a
			top 6px
			left 0
.general-wrapper
	padding 50px 30px 35px 20px
	border-radius: 5px
	background-color: rgba(#fff,.8)
	@media screen and (max-width 560px)
		padding 30px 20px