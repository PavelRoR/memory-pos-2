header
	overflow hidden
	padding 20px 0
	margin-bottom: 40px
	@media screen and (max-width 560px)
		padding 15px 0
		margin-bottom: 20px
.header-logo
	float left
	margin-top: 6px
	@media screen and (max-width 560px)
		display block
		float: none
		margin 0 auto 5px
		width 70px
.contacts
	float: right
	// line-height: 28px
	@media screen and (max-width 560px)
		float: none
.contact
	margin-left: 50px
	font-size: 14px
	font-weight: bold
	background-repeat: no-repeat
	background-position: left center
	color #000
	display inline-block
	line-height: 19px
	&.contact-tel
		padding-left: 25px
		background-image: url(../img/icons/tube.png)
	&.contact-email
		padding-left: 34px
		background-image: url(../img/icons/envelope.png)
	a
		display block
		font-size: 16px
		font-weight: normal
		&:focus
			text-decoration none
			color #000
		&:hover
			text-decoration underline
			color #000