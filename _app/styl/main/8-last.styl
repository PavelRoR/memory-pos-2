#last
	padding 120px 0 90px
	text-align center
	background-color: #E3DAE0
	margin-top: 60px
	@media screen and (max-width 991px)
		margin-top: 30px
		padding 90px 0
	@media screen and (max-width 386px)
		padding 60px 0
.last
	&-title
		font-size: 45px
		font-weight: bold
		text-transform uppercase
		@media screen and (max-width 991px)
			font-size: 36px
		@media screen and (max-width 560px)
			font-size: 30px
		@media screen and (max-width 386px)
			font-size: 24px
	&-text
		font-size: 24px
		text-transform uppercase
		margin 30px 0 40px
		@media screen and (max-width 991px)
			font-size: 20px
		@media screen and (max-width 560px)
			margin 20px 0 30px
		@media screen and (max-width 386px)
			font-size: 16px