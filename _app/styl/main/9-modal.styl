.white-popup
	position: relative;
	background-color: #F7F7F3
	border 2px dashed #ffa758
	border-radius: 10px
	box-shadow: 0 0 0 5px #F7F7F3
	padding: 50px 20px;
	width: auto;
	max-width: 650px;
	margin: 20px auto;
	overflow hidden
	@media screen and (max-width 560px)
		padding 30px 20px 20px
	@media screen and (max-width 385px)
		padding 30px 15px 15px
.mfp-close
	opacity 1
	position absolute
	top 10px
	right 10px
	transition: all .2s ease
	font-size: 40px
	font-weight: 900
	&:active
		top 10px
	&:hover
		color red
.form-modal
	margin: 0 auto
.form-title-modal
	margin: 0 0 25px
	text-align center
	@media screen and (max-width 560px)
		font-size: 24px
		margin-bottom: 20px
	@media screen and (max-width 385px)
		font-size: 22px
		margin-bottom: 15px
.mfp-fade.mfp-bg
	opacity: 0;
	transition: all 0.5s ease-out;
/* overlay animate in */
.mfp-fade.mfp-bg.mfp-ready
	opacity: 0.8;
/* overlay animate out */
.mfp-fade.mfp-bg.mfp-removing
	opacity: 0;
/* content at start */
.mfp-fade.mfp-wrap .mfp-content
	opacity: 0;
	transition: all 0.5s ease-out;
/* content animate it */
.mfp-fade.mfp-wrap.mfp-ready .mfp-content
	opacity: 1;
/* content animate out */
.mfp-fade.mfp-wrap.mfp-removing .mfp-content
	opacity: 0;
.input-mail-modal
	display block
	float: none
	margin 0 auto 10px
	width 100%
	max-width 380px
.button-form-modal
	display block
	float: none
	margin 0 auto
	width 100%
	max-width 380px
.checking-modal
	@media screen and (max-width 560px)
		max-width 380px