.lets
	&-items
		width 100%
		max-width 850px
		margin 0 auto 40px
	&-item
		border-radius: 5px
		background-color: #efeeea
		width 100%
		max-width 280px
		margin 60px auto 0
		padding 60px 20px 25px
		text-align center
		position relative
		min-height 198px
		display table
		&-img
			position absolute
			width 64px
			height: 64px
			top -22px
			left 0
			right 0
			margin 0 auto
			background-image: url(../img/icons/lets.png)
			background-repeat no-repeat
			&-1
				background-position: 0 0
			&-2
				background-position: -64px 0
			&-3
				background-position: -128px 0
			&-4
				background-position: -192px 0
			&-5
				background-position: -256px 0
			&-6
				background-position: -322px 0
		&-text
			display table-cell
			vertical-align middle