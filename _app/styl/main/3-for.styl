#for
	padding 80px 0
	background-color: #E3DAE0
	background-image url('../img/backs/for.png')
	background-repeat no-repeat
	background-position: center
	background-size contain
.for-item
	display table
	width 100%
	max-width 380px
	margin 0 auto 30px
	border-radius: 5px
	background-color: rgba(#fff, .5)
	padding 45px
	min-height 174px
	&-text
		display table-cell
		vertical-align middle
		font-size: 20px
.button-for
	margin-top: 75px