			span
				position relative
				z-index 10
				color #fff
.form-main
	position: absolute
	width 98%
	max-width 1435px
	margin 0 auto
	left 0
	right 0
	bottom: -90px
	padding 35px 140px
	background-color: #F7F7F3
	border 2px dashed #ffa758
	border-radius: 10px
	box-shadow: 0 0 0 5px #F7F7F3
.form-title
	font-size: 35px
	font-weight: bold
	text-transform uppercase
	margin-top: 35px
.input
	display block
	width 100%
	border: 1px solid #543f2a;
	border-radius: 7px;
	padding 20px 12px
	color: #000;
	background-color transparent
	&-mail
		max-width 230px
		float left
		@media screen and (max-width 1230px)
			max-width 315px
		@media screen and (max-width 1199px)
			display block
			float none
			margin 0 0 30px
		@media screen and (max-width 560px)
				margin 0 auto 10px
.button-form
	float right
	max-width 230px
	padding 20px 12px
	@media screen and (max-width 1199px)
		float: none
		display block
		width 100%
		max-width 315px
		margin 0
	@media screen and (max-width 560px)
		margin 0 auto
		background-color: #FEE7E6
		color: #000
@-webkit-keyframes autofill
	to
		font-size: 18px
		color: #000;
		background-color: transparent
input:-webkit-autofill
	-webkit-animation-name: autofill;
	-webkit-animation-fill-mode: both;
.alert-message
	clear both
	display: none;
	font-size: 16px;
	font-weight: bold
	padding-top: 10px;
	color: #f00
	text-align: center
	line-height: 1
.checking
	display: table;
	width 100%
	max-width 498px
	margin: 15px auto 0
	text-align: left
.checking-main
	margin-left: 0
	@media screen and (max-width 1199px)
		max-width 280px
	@media screen and (max-width 560px)
		margin 10px auto 0
.checking .check-label
	line-height: 24px;
	cursor: pointer;
	position: relative;
	display: table-cell;
	vertical-align: middle;
	padding: 0 0 0 28px;
	text-align: left;
	font-size: 14px
	font-weight: 100
	color #464343
	@media screen and (max-width 1199px)
		line-height: 18px
.checking .check-label a
	text-decoration: none
	border-bottom: 1px dashed transparent
	color #464343
	&:focus
		border-bottom: 1px dashed transparent
		color #464343
	&:hover
		border-bottom-color: #464343
		text-decoration: none
		color #464343
@keyframes pulse
	0%
		box-shadow: 0 0 0 0 rgba(red, .22)
	100%
		box-shadow: 0 0 7px 5px rgba(red, .22)
.checking .check-label:before
	content: '';
	background-color: red
	position: absolute;
	left: 0;
	top: 3px;
	width: 20px;
	height: 20px;
	border: 1px solid red
	border-radius: 5px
	animation: pulse
	animation-duration: .7s
	animation-iteration-count: infinite
	animation-timing-function: ease-out;
.checking .check-label:after
	content: '';
	position: absolute;
	left: 7px;
	top: -10px;
	width: 7px;
	height: 12px;
	background-color: transparent;
	opacity: 0;
	border-bottom: 1px solid #fff
	border-right: 1px solid #fff
	transform: rotate(41deg);
	transition: all 0.5s ease;
.check
	position: absolute;
	z-index: -1;
	opacity: 0;
	width: 0;
	height 0;
	border: 0;
	left -99999px;
.check:checked + .check-label:before
	background-color: #543F2A
	animation: none
	border: 1px solid #543F2A;
.check:checked + .check-label:after
	opacity: 1;
	top: 4px;
	transition: all 0.5s ease;
