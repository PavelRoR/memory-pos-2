#video
	padding 180px 0 80px
	@media screen and (max-width 991px)
		padding 60px 0
	@media screen and (max-width 386px)
		padding 40px 0 80px
.video-text
	font-size: 35px
	font-weight: bold
	margin-top: 100px
	@media screen and (max-width 1199px)
		margin-top: 60px
	@media screen and (max-width 991px)
		margin 0 0 35px
		text-align center
		br
			display none
	@media screen and (max-width 560px)
		font-size: 28px
	@media screen and (max-width 386px)
		font-size: 24px
.video-wrapper
	&-video
		&:after
			height 100px
		iframe
			width: 75%;
			height: 78%;
			top: 19px;
			left 2px
			@media screen and (max-width 386px)
				top 8px
				width: 100%;
				height: 100%;
.video-wrapper.video-wrapper-video .video-wrapper-laptop
	position absolute
	top 0
	left 0
	right 0
	width 100%
	@media screen and (max-width 386px)
		width: 130%;
		height: 125%;
		left -15%