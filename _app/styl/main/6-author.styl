#author
	padding 80px 0
	@media screen and (max-width 991px)
		padding 60px 0
	@media screen and (max-width 386px)
		padding 40px 0
	.container
		position relative
.general-title-author
	position absolute
	top 80px
	z-index 20
	&-1
		left 110px
		@media screen and (max-width 1199px)
			left 55px
	&-2
		right 110px
		@media screen and (max-width 1199px)
			right 55px
	@media screen and (max-width 991px)
		position: static
.author-img
	display block
	width 100%
	max-width 780px
	margin 0 auto
.author-info
	position absolute
	left 0
	right 0
	bottom: 55px
	@media screen and (max-width 1199px)
		bottom: 0
	@media screen and (max-width 991px)
		position: relative
		top 0
.general-wrapper-author
	width 100%
	max-width 560px
	margin 0 auto
	min-height 413px
	@media screen and (max-width 1199px)
		min-height 463px
	@media screen and (max-width 991px)
		min-height 1px
		margin-bottom: 25px