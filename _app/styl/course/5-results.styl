.result
	&-items
		width 100%
		max-width 850px
		margin 0 auto 40px
	&-item
		border-radius: 5px
		background-color: #efeeea
		width 100%
		max-width 280px
		margin 60px auto 0
		padding 60px 20px 25px
		text-align center
		position relative
		min-height 198px
		display table
		&-title
			position absolute
			font-size: 66px
			font-weight: bold
			line-height: 66px
			color #543F2A
			top -33px
			left 0
			right 0
			margin 0 auto
		&-text
			display table-cell
			vertical-align middle