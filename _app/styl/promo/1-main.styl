#main
	padding 0 0 90px
	background-color: #E8E7E2
	min-height calc(100vh - 147px)
	text-align center
	.content
		position relative
	@media screen and (max-width 560px)
		padding 0 0 60px
	@media screen and (max-width 386px)
		padding 0 0 40px
.main
	&-img
		position absolute
		&-1
			bottom: -280px
			left -300px
			@media screen and (max-width 560px)
				bottom: -200px
				left -200px
		&-2
			bottom: -500px
			right -300px
			@media screen and (max-width 560px)
				top 100px
				right -100px
				bottom: auto
				width 400px
				height: 400px
	&-pre
		font-size: 20px
		font-weight: bold
		margin-bottom: 40px
		@media screen and (max-width 560px)
			font-size: 16px
			margin-bottom: 20px
	&-title
		font-size: 22px
		span
			display block
			text-transform uppercase
			font-weight: bold
			color #543f2a
		@media screen and (max-width 991px)
			margin-top: 40px
		@media screen and (max-width 560px)
			margin-top: 20px
			font-size: 20px
	&-subtitle
		margin 20px 0
		font-size: 26px
		text-transform uppercase
		font-weight: bold
		@media screen and (max-width 560px)
			font-size: 22px
	&-text
		font-size: 20px
		margin-top: 50px
		span
			display inline-block
			background-color yellow
			padding 0 5px
			color #000
			border-radius: 3px
		@media screen and (max-width 560px)
			font-size: 18px
			margin-top: 30px
.video-wrapper-main
	&:after
		height 100px
	iframe
		width: 75%;
		height: 78%;
		top: 19px;
		left 2px
		@media screen and (max-width 385px)
			top 15px
	&-laptop
		position absolute
		top 0
		left 0
		right 0
		width 100%