mixin li(n, p)
	.col-md-4
		.lets-item(class='lets-item-' + n)
			.lets-item-img(class='lets-item-img-' + n)
			p.lets-item-text!=p

section#lets
	.container
		+gt('', 'Мастер-класс позволит Вам:')
		.lets-items
			.row
				+li('1', 'Интенсивно<br> прокачать мозг')
				+li('2', 'Освоить навыки, которые ускорят результативность обучения в несколько раз')
				+li('3', 'Запоминать в 2-3 раза больше информации, чем обычно')
			.row
				+li('4', 'Повысить свою креативность и интеллектуальную выносливость')
				+li('5', 'Узнать простые лайфхаки, которые будут держать Ваш мозг в тонусе')
				+li('6', 'Узнать информацию, дающую интеллектуальное превосходство')
		+b('button-up', href, 'Прокачать память')